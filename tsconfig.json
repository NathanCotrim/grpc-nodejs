{
  "compilerOptions": {
    "target": "ES2021",                       
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["dist", "tests"]
}
